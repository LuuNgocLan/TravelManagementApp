<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding">

    <ImageView
        android:id="@+id/imv_tourOffer"
        android:layout_width="@dimen/weight_image_item"
        android:layout_height="@dimen/height_image_item"
        android:src="@drawable/img_default_3_4" />
    <TextView
        android:id="@+id/tv_titleOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_tourOffer"
        android:text="Winter beach escapes 30% off"
        android:padding="@dimen/text_padding"/>
    <Button
        android:id="@+id/btn_explore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:background="@drawable/shape_button"
        android:text="@string/button_text_explore"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv_titleOffer"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>