<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_slide">

    <ImageView
        android:id="@+id/imv_tour"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_slide"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />

    <TextView
        android:id="@+id/tv_name_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="Nha Trang- Da Nang"
        android:background="#b7ffffff"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_tour"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="Giam gia den 20% cho mua Dong"
        android:background="#b7ffffff"
        android:textSize="15sp" />

</RelativeLayout>