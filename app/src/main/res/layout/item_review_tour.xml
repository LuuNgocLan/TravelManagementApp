<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding"
    android:background="@color/color_white"
    android:layout_margin="@dimen/item_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_tourOffer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/img_2"
        android:padding="@dimen/item_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_item_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_tourOffer"
                android:paddingLeft="@dimen/text_padding"
                android:text="Min"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rb_tour"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:rating="1.0"
                android:stepSize="1.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date_item_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_tourOffer"
                android:paddingLeft="@dimen/text_padding"
                android:text="16/12/2017" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "/>

            <TextView
                android:id="@+id/tv_time_item_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_tourOffer"
                android:text="7:05 am" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_tourOffer"
            android:paddingLeft="@dimen/text_padding"
            android:text="That's amazing tour!" />
    </LinearLayout>

</LinearLayout>