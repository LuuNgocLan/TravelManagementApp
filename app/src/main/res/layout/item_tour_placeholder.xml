<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_padding"
    android:background="@color/color_white"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/weight_image_item"
        android:layout_height="@dimen/height_image_item"
        android:background="@color/colorPlaceholder"
        android:layout_marginBottom="@dimen/item_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPlaceholder"
        android:layout_marginRight="@dimen/text_padding"
        android:layout_marginLeft="@dimen/text_padding"/>

    <RelativeLayout
        android:layout_width="@dimen/weight_image_item"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/item_padding">

        <View
            android:layout_width="60dp"
            android:layout_height="@dimen/height_button_small"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPlaceholder" />
    </RelativeLayout>
</LinearLayout>