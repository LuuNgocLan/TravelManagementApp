<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:numStars="5"
        android:rating="1.0"
        android:stepSize="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:text="@string/review_form_name" />

    <EditText
        android:id="@+id/edt_review_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:background="@drawable/edittext_round_border"
        android:padding="@dimen/text_padding" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:text="@string/review_form_email" />

    <EditText
        android:id="@+id/edt_review_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:background="@drawable/edittext_round_border"
        android:padding="@dimen/text_padding" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:text="@string/review_form_content" />

    <EditText
        android:id="@+id/edt_review_form_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:background="@drawable/edittext_round_border"
        android:maxLines="5"
        android:padding="@dimen/text_padding" />

    <Button
        android:id="@+id/btn_submit_review_form"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:layout_gravity="center"
        android:background="@drawable/shape_button"
        android:text="@string/button_submit"
        android:textColor="@android:color/white" />

</LinearLayout>